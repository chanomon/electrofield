#!/usr/bin/env python3

import sys
import numpy as np
import matplotlib.pyplot as plt
from matplotlib.patches import Circle

#u is the position vector
#  q is charge
# v is the position of q
k = 9e9 #N * m**2 / C**2
def Electrostaticforce(u,q,v):
    q1 = 1.
    r_vec = v - u 
    r = mod(v-u)
    F = (k  * q1 * q /r**3)*r_vec
    return F

u = [0,0,0]
q = 1.
v = [1e-6,0,0]
F = Electrostaticforce(u,q,v)
print F


    
